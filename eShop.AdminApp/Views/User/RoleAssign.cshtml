@model eShop.ViewModels.System.Users.RoleAssignRequest

@{
    ViewData["Title"] = "Gán quyền người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Gán quyền người dùng</h1>
    <a asp-action="Index" asp-controller="User">&larr; Danh sách người dùng</a>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">

        <div class="card-body">
            <div class="table-responsive">
                <form asp-action="RoleAssign">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    @for (var i = 0; i < Model.Roles.Count; i++)
                    {
                        <div class="form-group">
                            <label>
                                @Model.Roles[i].Name
                                <input type="checkbox" asp-for="Roles[i].Selected" />
                                <input type="hidden" asp-for="Roles[i].Id" />
                                <input type="hidden" asp-for="Roles[i].Name" />
                            </label>
                        </div>
                    }
                    <div class="form-group">
                        <input type="submit" value="Lưu lại" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
